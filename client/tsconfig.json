{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "removeComments": true,
        "moduleResolution": "node",
        "lib": ["ESNext", "dom", "WebWorker"],
        "sourceMap": true,
        "strict": true,
        "jsx": "react",
        "rootDir": "src",
        "outDir": "public",
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "allowSyntheticDefaultImports": true,
        "newLine": "lf",
        "pretty": true
    },
    "include": ["**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"]
}